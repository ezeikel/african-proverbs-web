generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Region {
  ASHANTI
  ZULU
  MASAI
  HAUSA
}

enum Tribe {
  NORTH_AFRICA
  EAST_AFRICA
  WEST_AFRICA
  SOUTH_AFRICA
}

enum Category {
  WISDOM
  LIFE
  LOVE
  SUCCESS
}

model Proverb {
  id        Int       @id @default(autoincrement())
  text      String
  region    Region?
  tribe     Tribe?
  category  Category?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
